<%- model_class = Firm -%>
<div class="page-header">
  <h1><%=t '.title', :default => Firm %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:firm_id) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:sector) %></th>
      <th><%= model_class.human_attribute_name(:specialties) %></th>
      <th><%= model_class.human_attribute_name(:vintage) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:size) %></th>
      <th><%= model_class.human_attribute_name(:projects) %></th>
      <th><%= model_class.human_attribute_name(:top_10_products) %></th>
      <th><%= model_class.human_attribute_name(:accolades) %></th>
      <th><%= model_class.human_attribute_name(:state_licensure) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:website) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @firms.each do |firm| %>
      <tr>
        <td><%= firm.id %></td>
        <td><%= firm.firm_id %></td>
        <td><%= firm.type %></td>
        <td><%= firm.sector %></td>
        <td><%= firm.specialties %></td>
        <td><%= firm.vintage %></td>
        <td><%= firm.location %></td>
        <td><%= firm.size %></td>
        <td><%= firm.projects %></td>
        <td><%= firm.top_10_products %></td>
        <td><%= firm.accolades %></td>
        <td><%= firm.state_licensure %></td>
        <td><%= firm.name %></td>
        <td><%= firm.email %></td>
        <td><%= firm.phone %></td>
        <td><%= firm.website %></td>
        <td><%=l firm.created_at, format: :long %></td>
        <td>
          <%= link_to firm_path(firm), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to firm_path(firm), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_firm_path,
            :class => 'btn btn-primary' %>
